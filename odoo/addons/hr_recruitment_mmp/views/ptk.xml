<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_ptk_mmp_form" model="ir.ui.view">
        <field name="name">ptk.mmp.form.view</field>
        <field name="model">ptk.mmp</field>
        <field name="arch" type="xml">
            <form string="PTK">
                <sheet>
                     <div class="oe_title">
                          <label for="name"/>
                          <h1><field name="name" readony="1" placeholder="e.g. Accounting"/></h1>
                        </div>
                    <group col="4">
                        <field name="department_id" options="{'no_create':True,'no_edit':True}" />
                        <field name="divisi_id" options="{'no_create':True,'no_edit':True}" />
                        <field name="sect_id" options="{'no_create':True,'no_edit':True}" />
                        <field name="sub_sect_id" options="{'no_create':True,'no_edit':True}" />
                        <field name="team_id" options="{'no_create':True,'no_edit':True}" />
                        <field name="unit_id" options="{'no_create':True,'no_edit':True}" />
                        <field name="grade" options="{'no_create':True,'no_edit':True}" />
                        <field name="level" options="{'no_create':True,'no_edit':True}"/>
                    </group>
                    <separator />
                    <notebook>
                        <page string="Info">
                            <group col="4">
                                 <field name="type_ptk" options="{'no_create':True,'no_edit':True}"/>
                                <field name="pendidikan"/>
                                <field name="jurusan"/>
                                <field name="pengalaman"/>
                                <field name="jml_pengajuan"/>
                                <field name="tgl_butuh"/>
                                <field name="penempatan"/>
                                <field name="gaji"/>
                                <field name="type_pekerja"/>
                                <field name="type_apd"/>
                                <field name="wl_id"/>
                                <field name="contract"/>
                                <field name="mcu"/>
                                <field name="h_kerja"/>
                                <field name="shift"/>
                                <field name="j_k"/>

                                <field name="fit_ids" widget="many2many_checkboxes"/>
                                <field name="fit_ket" class="text_high textarea" placeholder="Contoh:&#10;Email: xxxx@megamarine.com&#10;File Server: Folder Umum 01,Folder Umum 02" />
                                <field name="employee_id" invisible="1"/>
                            </group>
                        </page>
                        <page string="Keterangan">
                            <group>
                                <field name="list_k" placeholder="Isikan NIK dan Nama"/>
                                <field name="kriteria" placeholder="Kriteria yg dibutuhkan"/>
                                <field name="job_desc" placeholder="Tugas Pokok"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_ptk_tree">
        <field name="name">PTK MMP</field>
        <field name="model">ptk.mmp</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id" string="Request By" />
                <field name="department_id"/>
                <field name="divisi_id"/>
                <field name="team_id"/>
                <field name="unit_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_ptk_mmp_view" model="ir.ui.view">
        <field name="name">ptk.mmp.search</field>
        <field name="model">ptk.mmp</field>
        <field name="arch" type="xml">
            <search>
                <field name="department_id"/>
                <field name="divisi_id"/>
                <field name="sect_id"/>
                <field name="team_id"/>
                <field name="unit_id"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Department" name="department_id" domain="[]" context="{'group_by': 'department_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="ptk_action" model="ir.actions.act_window">
           <field name="name">PTK</field>
           <field name="res_model">ptk.mmp</field>
           <field name="view_mode">form,tree</field>
           <field name="view_id" ref="view_ptk_tree" />
           <field name="search_view_id" ref="hr_ptk_mmp_view" />
           <field name="context">{
                'search_default_group_by_department_id': 1,
            }</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No data yet!
                </p><p>
                    PTK
                </p>
            </field>
       </record>

    <menuitem
        name="PTK"
        parent="hr_recruitment.menu_hr_recruitment_root"
        id="hr_recruitment.menu_crm_case_categ0_act_job"
        action="ptk_action"
        sequence="2"/>




</odoo>