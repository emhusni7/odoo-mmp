<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_ptk_mmp_form" model="ir.ui.view">
        <field name="name">ptk.mmp.form.view</field>
        <field name="model">ptk.mmp</field>
        <field name="arch" type="xml">
            <form string="PTK">
                <header>
                    <button name="send_mail" type="object" attrs="{'invisible':[('invisible_stage','=',True)]}" class="oe_highlight" string="Approve"/>
                    <button name="set_cancel" type="object" attrs="{'invisible':[('invisible_stage','=',True)]}" class="btn-danger" string="Cancel"/>
                    <button name="print_report" type="object" class="btn btn-md btn-primary" string="Print"/>
                    <field name="stage_id" widget="statusbar" decoration-info="stage_name in ['User','Manager','Direksi','HRD']" decoration-muted="stage_name in ['Recruitment']" decoration-success="stage_name in ['Complete']" decoration-danger="stage_name in ['Reject']" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="act_pemenuhan"
                            groups="hr.group_hr_user"
                            class="oe_stat_button"
                            icon="fa-user-plus" attrs="{'invisible':[('stage_name','not in',['Recruitment','Complete'])]}"
                            type="object">
                            <field name="jml_pemenuhan" widget="statinfo" string="Add Employee" help="Jumlah Pemenuhan Employee"/>
                        </button>
                    </div>
                     <div class="oe_title">
                          <label for="name"/>
                          <h1><field name="name" readony="1" placeholder="e.g. Accounting"/></h1>
                        </div>
                    <field name="stage_name" invisible="1"/>
                    <group col="4">
                        <field name="department_id" attrs="{'readonly':[('stage_name','!=','User')]}" options="{'no_create':True,'no_edit':True}" />
                        <field name="divisi_id" attrs="{'readonly':[('stage_name','!=','User')]}" options="{'no_create':True,'no_edit':True}" />
                        <field name="sect_id" attrs="{'readonly':[('stage_name','!=','User')]}" options="{'no_create':True,'no_edit':True}" />
                        <field name="sub_sect_id" attrs="{'readonly':[('stage_name','!=','User')]}" options="{'no_create':True,'no_edit':True}" />
                        <field name="team_id" attrs="{'readonly':[('stage_name','!=','User')]}" options="{'no_create':True,'no_edit':True}" />
                        <field name="unit_id" attrs="{'readonly':[('stage_name','!=','User')]}" options="{'no_create':True,'no_edit':True}" />
                        <field name="grade" attrs="{'readonly':[('stage_name','!=','User')]}" options="{'no_create':True,'no_edit':True}" />
                        <field name="level" attrs="{'readonly':[('stage_name','!=','User')]}" options="{'no_create':True,'no_edit':True}"/>
                        <field name="request_date" attrs="{'readonly':[('stage_name','!=','User')]}" />
                    </group>
                    <separator />
                    <notebook>
                        <page string="Info">
                            <group col="4">
                                 <field name="type_ptk" attrs="{'readonly':[('stage_name','!=','User')]}" options="{'no_create':True,'no_edit':True}"/>
                                <field name="pendidikan" attrs="{'readonly':[('stage_name','=','Complete')]}" />
                                <field name="jurusan" attrs="{'readonly':[('stage_name','!=','User')]}" />
                                <field name="pengalaman" attrs="{'readonly':[('stage_name','=','Complete')]}" />
                                <field name="jml_pengajuan" attrs="{'readonly':[('stage_name','=','Complete')]}" />
                                <field name="tgl_butuh" attrs="{'readonly':[('stage_name','!=','User')]}"/>
                                <field name="penempatan" attrs="{'readonly':[('stage_name','!=','User')]}"/>
                                <field name="gaji" attrs="{'readonly':[('stage_name','=','Complete')]}" />
                                <field name="type_pekerja" attrs="{'readonly':[('stage_name','!=','User')]}"/>
                                <field name="type_apd" attrs="{'readonly':[('stage_name','!=','User')]}"/>
                                <field name="wl_id" attrs="{'readonly':[('stage_name','!=','User')]}"/>
                                <field name="contract" attrs="{'readonly':[('stage_name','!=','User')]}"/>
                                <field name="mcu" attrs="{'readonly':[('stage_name','!=','User')]}"/>
                                <field name="h_kerja" attrs="{'readonly':[('stage_name','!=','User')]}" />
                                <field name="shift" attrs="{'readonly':[('stage_name','!=','User')]}" />
                                <field name="j_k" attrs="{'readonly':[('stage_name','!=','User')]}"/>

                                <field name="fit_ids" widget="many2many_checkboxes" attrs="{'readonly':[('stage_name','!=','User')]}" />
                                <field name="fit_ket" attrs="{'readonly':[('stage_name','!=','User')]}" class="text_high textarea" placeholder="Contoh:&#10;Email: xxxx@megamarine.com&#10;File Server: Folder Umum 01,Folder Umum 02" />
                                <field name="employee_id" invisible="1"/>
                            </group>
                        </page>
                        <page string="Keterangan">
                            <group>
                                <field name="list_k" attrs="{'readonly':[('stage_name','!=','User')]}" placeholder="Isikan NIK dan Nama"/>
                                <field name="kriteria" attrs="{'readonly':[('stage_name','!=','User')]}" placeholder="Kriteria yg dibutuhkan"/>
                                <field name="job_desc" attrs="{'readonly':[('stage_name','!=','User')]}" placeholder="Tugas Pokok"/>
                                <field name="link_login" invisible="1" />
                                <field name="invisible_stage" invisible="1"/>
                                <field name="ptk_app_ids" invisible="1" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                <div class="oe_chatter">
                   <field name="message_ids"/>
                </div>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_ptk_tree">
        <field name="name">PTK MMP</field>
        <field name="model">ptk.mmp</field>
        <field name="arch" type="xml">
            <tree  decoration-info="stage_name in ['Recruitment']" decoration-success="stage_name in ['Complete']" decoration-danger="stage_name in ['Reject']" >
                <field name="employee_id" string="Request By" />
                <field name="department_id"/>
                <field name="divisi_id"/>
                <field name="stage_name" invisible="1" />
                <field name="jml_pengajuan" string="Qty Permintaan" />
                <field name="jml_pemenuhan" />
                <field name="stage_id" widget="badge" decoration-warning="stage_name in ['User','Manager','HRD']" decoration-info="stage_name in ['Direksi','Recruitment']" decoration-danger="stage_name == 'Reject'" decoration-success="stage_name == 'Complete'" />
                <button name="act_pemenuhan" class="oe_stat_button" groups="hr.group_hr_user" attrs="{'invisible':[('stage_name','!=','Recruitment')]}" icon="fa-user-plus" type="object"></button>
            </tree>
        </field>
    </record>

    <record id="hr_ptk_mmp_view" model="ir.ui.view">
        <field name="name">ptk.mmp.search</field>
        <field name="model">ptk.mmp</field>
        <field name="arch" type="xml">
            <search>
                <field name="department_id"/>
                <field name="divisi_id"/>
                <field name="sect_id"/>
                <field name="team_id"/>
                <field name="unit_id"/>
                <field name="stage_id"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Department" name="department" domain="[]" context="{'group_by': 'department_id'}"/>
                    <filter string="Stage" name="stage" domain="[]" context="{'group_by': 'stage_id'}"/>
                    <filter string="Recruitment" name="recruit" domain="[('stage_id','=','Recruitment')]" />
                </group>
            </search>
        </field>
    </record>

    <record id="ptk_action" model="ir.actions.act_window">
           <field name="name">PTK</field>
           <field name="res_model">ptk.mmp</field>
           <field name="view_mode">form,tree</field>
           <field name="view_id" ref="view_ptk_tree" />
           <field name="search_view_id" ref="hr_ptk_mmp_view" />
           <field name="context">{
                'search_default_department': True
            }</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No data yet!
                </p><p>
                    PTK
                </p>
            </field>
       </record>

    <menuitem
        name="PTK"
        parent="hr_recruitment.menu_hr_recruitment_root"
        id="hr_recruitment.menu_crm_case_categ0_act_job"
        action="ptk_action"
        sequence="2"/>




</odoo>