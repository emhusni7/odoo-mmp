<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ir_rule_allocation_user_emp_dep" model="ir.rule">
        <field name="name">Allocation User</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave_allocation" />
        <field name="groups" eval="[(4, ref ('hr_holidays.group_hr_holidays_user'))]" />
        <field name = "domain_force"> [('employee_id.department_id', '=', user.employee_id.department_id.id)] </field>
    </record>

    <record id="ir_rule_leave_user_emp_dep" model="ir.rule">
        <field name="name">Leave User</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave" />
        <field name="groups" eval="[(4, ref ('hr_holidays.group_hr_holidays_user'))]" />
        <field name = "domain_force"> [('employee_id.department_id', '=', user.employee_id.department_id.id)] </field>
    </record>
</odoo>